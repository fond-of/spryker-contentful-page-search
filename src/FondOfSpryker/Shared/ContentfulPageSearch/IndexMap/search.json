{
  "mappings": {
    "page": {
      "dynamic_templates": [
        {
          "search-result-data": {
            "mapping": {
              "index": "false"
            },
            "path_match": "search-result-data.*"
          }
        },
        {
          "string_sort": {
            "mapping": {
              "analyzer": "lowercase_keyword_analyzer",
              "type": "keyword"
            },
            "path_match": "string-sort.*"
          }
        }
      ],
      "properties": {
        "blog_categories": {
          "type": "string",
          "index": "not_analyzed",
          "include_in_all": false
        },
        "blog_tags": {
          "type": "string",
          "index": "not_analyzed",
          "include_in_all": false
        },
        "blog_post_published_at": {
          "type": "keyword",
          "include_in_all": false
        },
        "string-sort": {
          "type": "object",
          "include_in_all": false,
          "properties": { }
        },
        "string-facet": {
          "type": "nested",
          "include_in_all": false,
          "properties": {
            "facet-name": {
              "type": "keyword"
            },
            "facet-value": {
              "type": "keyword"
            }
          }
        }
      }
    }
  }
}
